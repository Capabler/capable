{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "rootDir": "./lib",
    "baseUrl": "./lib",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["lib"],
  "exclude": ["node_modules", "example", "project"]
}
